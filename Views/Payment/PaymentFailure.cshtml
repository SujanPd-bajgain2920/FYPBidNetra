@{
    ViewData["Title"] = "Payment Failed";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-lg shadow-lg">
        <div class="text-center">
            <i class="fas fa-times-circle text-red-500 text-6xl mb-4"></i>
            <h2 class="text-3xl font-bold text-gray-900 mb-2">Payment Failed</h2>
            <p class="text-gray-600 mb-6">Your payment could not be processed. Please try again.</p>

            <div class="flex flex-col space-y-4">
                

                <a asp-controller="BidTender" asp-action="Index"
                   class="w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    <i class="fas fa-home mr-2"></i> Return to Home
                </a>
            </div>
        </div>
    </div>
</div>