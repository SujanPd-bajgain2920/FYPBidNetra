@model TenderEdit

<h2>Delete Tender</h2>
<p>Are you sure you want to delete this tender?</p>

<div>
    <h4>@Model.Title</h4>
    <p><strong>Issued By:</strong> @Model.IssuedBy</p>
    <p><strong>Status:</strong> @Model.TenderStatus</p>
</div>

<form asp-action="DeleteTenderConfirmed" asp-controller="PublisherTender" method="post">
    <input type="number" name="id" value="@Model.EncId" />
    <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded">Delete</button>
    <a asp-action="Index" class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded">Cancel</a>
</form>
