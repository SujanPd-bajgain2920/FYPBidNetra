@{
    Layout = "_Layout";
}
<div class="bg-gray-50 min-h-screen">
    <!-- Page Header -->
    <div class="bg-gradient-to-r from-blue-600 to-indigo-700 p-8">
        <div class="container mx-auto">
            <div class="flex justify-between items-center">
                <div>
                    <h1 class="text-4xl font-bold text-white mb-2">Tender Management</h1>
                    <p class="text-blue-100">Manage and track all your tender processes efficiently</p>
                </div>
                <div class="hidden sm:block">
                    <div class="bg-blue-500 bg-opacity-20 rounded-lg p-4">
                        <div class="text-white">
                            <i class="fas fa-calendar-alt mr-2"></i>
                            <span id="current-date"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container mx-auto px-4 -mt-8">
        <div class="bg-white rounded-lg shadow-xl p-6">
            <!-- Tabs Navigation -->
            <div class="mb-8">
                <div class="flex flex-wrap gap-2 border-b border-gray-200">
                    <button data-action="@Url.Action("TenderList", "PublisherTender")"
                            class="tab-link group inline-flex items-center px-6 py-4 text-sm font-medium rounded-t-lg hover:bg-gray-50 transition-all">
                        <i class="fas fa-file-alt text-lg mr-3 text-blue-600"></i>
                        <span class="text-gray-700 group-hover:text-blue-600">Tenders List</span>
                    </button>

                    <button data-action="@Url.Action("OpenTender", "PublisherTender")"
                            class="tab-link group inline-flex items-center px-6 py-4 text-sm font-medium rounded-t-lg hover:bg-gray-50 transition-all">
                        <i class="fas fa-door-open text-lg mr-3 text-green-600"></i>
                        <span class="text-gray-700 group-hover:text-blue-600">Open Tenders</span>
                    </button>

                    <button data-action="@Url.Action("CloseTender", "PublisherTender")"
                            class="tab-link group inline-flex items-center px-6 py-4 text-sm font-medium rounded-t-lg hover:bg-gray-50 transition-all">
                        <i class="fas fa-lock text-lg mr-3 text-red-600"></i>
                        <span class="text-gray-700 group-hover:text-blue-600">Closed Tenders</span>
                    </button>

                    <button data-action="@Url.Action("TenderAward", "PublisherTender")"
                            class="tab-link group inline-flex items-center px-6 py-4 text-sm font-medium rounded-t-lg hover:bg-gray-50 transition-all">
                        <i class="fas fa-award text-lg mr-3 text-yellow-600"></i>
                        <span class="text-gray-700 group-hover:text-blue-600">Award Tenders</span>
                    </button>

                    <button data-action="@Url.Action("PublishTender", "PublisherTender")"
                            class="tab-link group inline-flex items-center px-6 py-4 text-sm font-medium rounded-t-lg hover:bg-gray-50 transition-all ml-auto">
                        <i class="fas fa-plus-circle text-lg mr-3 text-purple-600"></i>
                        <span class="text-gray-700 group-hover:text-blue-600">Publish New Tender</span>
                    </button>
                </div>
            </div>

            <!-- Content Area -->
            <div id="tender-content" class="bg-gray-50 rounded-lg p-6 min-h-[500px]">
                <!-- Content will be loaded via AJAX -->
                <div class="animate-pulse flex justify-center items-center h-full">
                    <i class="fas fa-circle-notch fa-spin text-4xl text-blue-600"></i>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Set current date
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            document.getElementById('current-date').textContent = new Date().toLocaleDateString('en-US', options);

                // Load default content
            $('#tender-content').load('@Url.Action("TenderList", "PublisherTender")', function() {
                $('.tab-link').first().addClass('border-b-2 border-blue-600 bg-gray-50');
            });

            // Handle tab clicks
            $('.tab-link').click(function (e) {
                    e.preventDefault();
                    const url = $(this).data('action');

                    // Show loading animation
                    $('#tender-content').html(`
                        <div class="animate-pulse flex justify-center items-center h-full">
                            <i class="fas fa-circle-notch fa-spin text-4xl text-blue-600"></i>
                        </div>
                    `);

                    // Load content
                    $('#tender-content').load(url);

                    // Update active tab
                    $('.tab-link').removeClass('border-b-2 border-blue-600 bg-gray-50');
                    $(this).addClass('border-b-2 border-blue-600 bg-gray-50');
                });

                // Initialize Flowbite components
                if (typeof initFlowbite === 'function') {
                    initFlowbite();
                }
            });

            // Toast notifications
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                    toastr.success('@TempData["SuccessMessage"]', 'Success', {
                        timeOut: 5000,
                        closeButton: true,
                        progressBar: true,
                        positionClass: "toast-top-right",
                    });
            </text>
        }
    </script>
}