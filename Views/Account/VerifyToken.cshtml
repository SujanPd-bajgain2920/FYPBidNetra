@model UserListEdit
@{
    ViewData["Title"] = "Verify Token";
    Layout = "_StaticLayout";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full">
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
            <!-- Header -->
            <div class="bg-gradient-to-r from-blue-600 to-blue-800 px-6 py-6 text-center">
                <div class="bg-white rounded-full h-16 w-16 flex items-center justify-center mx-auto mb-3 shadow-md">
                    <i class="fas fa-envelope-open-text text-blue-600 text-2xl"></i>
                </div>
                <h1 class="text-xl font-bold text-white">Verify Your Email</h1>
                <p class="text-blue-100 text-sm mt-1">Enter the token sent to your email address</p>
            </div>

            <div class="p-6">
                <!-- Token Verification Form -->
                <form asp-action="VerifyToken" class="mb-6">
                    <div asp-validation-summary="ModelOnly" class="mb-4 p-3 bg-red-50 text-red-600 rounded-lg border border-red-200 text-sm"></div>
                    <input hidden asp-for="EmailAddress" />

                    <div class="mb-5">
                        <label asp-for="EmailToken" class="block text-sm font-medium text-gray-700 mb-1">Verification Token</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-key text-gray-400"></i>
                            </div>
                            <input asp-for="EmailToken"
                                   class="bg-gray-50 border border-gray-300 text-gray-900 pl-10 pr-3 py-3 rounded-lg w-full text-sm focus:ring-blue-500 focus:border-blue-500 transition-colors"
                                   placeholder="Enter the token from your email"
                                   required />
                        </div>
                        <span asp-validation-for="EmailToken" class="text-sm text-red-600 mt-1 block"></span>
                        <p class="text-xs text-gray-500 mt-2">
                            <i class="fas fa-info-circle mr-1"></i> The token was sent to your email address. Please check your inbox and spam folder.
                        </p>
                    </div>

                    <button type="submit"
                            class="bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-medium rounded-lg text-sm px-5 py-3 w-full focus:outline-none focus:ring-4 focus:ring-blue-300 transition-colors duration-200 flex items-center justify-center">
                        <i class="fas fa-check-circle mr-2"></i> Verify Token
                    </button>
                </form>

                <!-- Divider -->
                <div class="relative my-6">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-200"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-white text-gray-500">Didn't receive the token?</span>
                    </div>
                </div>

                <!-- Resend Token Form -->
                <form asp-action="ForgotPassword" method="post" id="resend-token-form">
                    <input hidden asp-for="EmailAddress" />

                    <button type="submit"
                            class="bg-white border border-blue-600 text-blue-600 hover:bg-blue-50 font-medium rounded-lg text-sm px-5 py-3 w-full focus:outline-none focus:ring-4 focus:ring-blue-300 transition-colors duration-200 flex items-center justify-center">
                        <i class="fas fa-paper-plane mr-2"></i> Resend Verification Token
                    </button>
                </form>

                <!-- Back to Login Link -->
                <div class="mt-6 text-center">
                    <a asp-action="Login" asp-controller="Account" class="text-blue-600 hover:text-blue-800 text-sm flex items-center justify-center">
                        <i class="fas fa-arrow-left mr-1"></i> Back to Login
                    </a>
                </div>
            </div>
        </div>

        <!-- Help Text -->
        <div class="mt-4 text-center text-sm text-gray-600">
            <p>Having trouble? <a href="#" class="text-blue-600 hover:text-blue-800">Contact Support</a></p>
        </div>
    </div>
</div>

<!-- Add FontAwesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">