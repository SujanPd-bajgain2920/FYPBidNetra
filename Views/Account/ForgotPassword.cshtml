@model UserListEdit
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_StaticLayout";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full">
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
            <!-- Header -->
            <div class="bg-gradient-to-r from-blue-600 to-blue-800 px-6 py-6 text-center">
                <div class="bg-white rounded-full h-16 w-16 flex items-center justify-center mx-auto mb-3 shadow-md">
                    <i class="fas fa-unlock-alt text-blue-600 text-2xl"></i>
                </div>
                <h1 class="text-xl font-bold text-white">Recover Your Account</h1>
                <p class="text-blue-100 text-sm mt-1">Enter your email to receive a password reset link</p>
            </div>

            <div class="p-6">
                <form asp-action="ForgotPassword">
                    <div asp-validation-summary="ModelOnly" class="mb-4 p-3 bg-red-50 text-red-600 rounded-lg border border-red-200 text-sm"></div>

                    <div class="mb-5">
                        <label asp-for="EmailAddress" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-envelope text-gray-400"></i>
                            </div>
                            <input asp-for="EmailAddress"
                                   class="bg-gray-50 border border-gray-300 text-gray-900 pl-10 pr-3 py-3 rounded-lg w-full text-sm focus:ring-blue-500 focus:border-blue-500 transition-colors"
                                   placeholder="Enter your registered email address"
                                   required />
                        </div>
                        <span asp-validation-for="EmailAddress" class="text-sm text-red-600 mt-1 block"></span>
                        <p class="text-xs text-gray-500 mt-2">
                            <i class="fas fa-info-circle mr-1"></i> We'll send a verification token to this email address
                        </p>
                    </div>

                    <button type="submit"
                            class="bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-medium rounded-lg text-sm px-5 py-3 w-full focus:outline-none focus:ring-4 focus:ring-blue-300 transition-colors duration-200 flex items-center justify-center">
                        <i class="fas fa-paper-plane mr-2"></i> Send Recovery Email
                    </button>

                    <!-- Back to Login Link -->
                    <div class="mt-6 text-center">
                        <a href="@Url.Action("Login", "Account")" class="text-blue-600 hover:text-blue-800 text-sm flex items-center justify-center">
                            <i class="fas fa-arrow-left mr-1"></i> Back to Login
                        </a>
                    </div>
                </form>
            </div>
        </div>

      
    </div>
</div>

<!-- Add FontAwesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">