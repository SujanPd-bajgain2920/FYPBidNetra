<style>
    .top {
        margin-top: 20px;
    }

    .toggle-switch {
        appearance: none;
        width: 40px;
        height: 20px;
        background: #ccc;
        border-radius: 9999px;
        position: relative;
        cursor: pointer;
        outline: none;
        transition: background 0.3s;
    }

        .toggle-switch:checked {
            background: #4E54C8;
        }

        .toggle-switch::before {
            content: '';
            position: absolute;
            top: 3px;
            left: 3px;
            width: 14px;
            height: 14px;
            background: white;
            border-radius: 50%;
            transition: transform 0.3s;
        }

        .toggle-switch:checked::before {
            transform: translateX(20px);
        }

</style>

