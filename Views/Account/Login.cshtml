@model UserListEdit
@{
    Layout = null;
    ViewData["Title"] = "Login";

}


    <script src="https://cdn.jsdelivr.net/npm/flowbite/dist/flowbite.min.js"></script>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.5/flowbite.min.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    <style>
        .top {
          margin-top: 150px;
        }
    </style>

<body class="bg-gray-100">
    <div class="top px-6 sm:px-6 lg:px-8">
        <div class="min-h-screen flex items-center justify-center mt-48">
            <div class="bg-white rounded-lg shadow-md w-full max-w-md p-8">
                <h2 class="text-3xl font-bold text-center text-blue-700 mb-6">User Login</h2>

                <form asp-action="Login" asp-controller="Account" method="POST" class="space-y-4">
                    <div asp-validation-summary="ModelOnly"></div>
                    <!-- Username -->
                    <div>
                        <label asp-for="EmailAddress" class="block text-sm font-medium text-gray-700">
                            Email Address <span class="text-red-500">*</span>
                        </label>
                        <input asp-for="EmailAddress" type="text"
                               class="block w-full mt-1 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
                               required />
                        <span asp-validation-for="EmailAddress"></span>
                    </div>

                    <!-- Password -->
                    <div>
                        <label asp-for="UserPassword" class="block text-sm font-medium text-gray-700">
                            Password <span class="text-red-500">*</span>
                        </label>
                        <input asp-for="UserPassword" type="password"
                               class="block w-full mt-1 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
                               required />
                        <span asp-validation-for="UserPassword"></span>
                    </div>

                    <!-- Login Button -->
                    <div>
                       
                        <button type="submit"
                                class="btn btn-primary w-full bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-200">
                            Login
                        </button>
                    </div>
                </form>

                <div class="text-center mt-4">
                    <p class="text-sm text-gray-600">
                        Forgot the password?
                        <a asp-action ="ForgotPassword" asp-controller="Account" class="text-blue-500 hover:underline">Reset your password</a>
                    </p>
                </div>

                <!-- Register Link -->
                <div class="text-center mt-4">
                    <p class="text-sm text-gray-600">
                        Don't have an account?
                        <a asp-action="Register" asp-controller="Account" class="btn text-blue-500 hover:underline">Create a New Account</a>
                    </p>
                </div>
            </div>
        </div>
    </div>



    <script>
        // You can check for a specific TempData key or ModelState error to trigger the toastr message.
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                    toastr.success('@TempData["SuccessMessage"]', 'Success', {timeOut: 5000 });
            </text>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                    toastr.error('@TempData["ErrorMessage"]', 'Error', {timeOut: 5000 });
            </text>
        }

       

    </script>
</body>

