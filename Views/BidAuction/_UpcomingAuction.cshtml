@model IEnumerable<AuctionEdit>

@{
    ViewData["Title"] = "Upcomming Auctions";
}
<style>
    body {
      background: linear-gradient(135deg, #f6f9fc 0%, #edf2f7 100%);
      font-family: 'Segoe UI', Arial, sans-serif;
      min-height: 100vh;
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
    }

    .page-title {
      text-align: center;
      margin: 2rem 0 3rem;
      color: #2d3748;
      font-size: 2.5rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      position: relative;
      padding-bottom: 1rem;
    }

    .page-title:after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 100px;
      height: 4px;
      background: linear-gradient(90deg, #4c6ef5, #2dce89);
      border-radius: 2px;
    }

    .tender-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      gap: 2rem;
      padding: 1rem;
    }

    .tender-card {
      background: white;
      border: none;
      border-radius: 20px;
      overflow: hidden;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
      transition: all 0.3s ease;
    }

    .tender-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
    }

    .card-image {
      height: 200px;
      width: 100%;
      object-fit: cover;
      transition: transform 0.3s ease;
    }

    .tender-card:hover .card-image {
      transform: scale(1.05);
    }

    .card-content {
      padding: 1.5rem;
    }

    .card-title {
      font-size: 1.25rem;
      font-weight: 700;
      color: #2d3748;
      margin-bottom: 1rem;
      line-height: 1.4;
    }

    .card-text {
      color: #718096;
      line-height: 1.6;
      margin-bottom: 1.5rem;
    }

    .card-header {
      display: flex;
      justify-content: space-between;
      margin-bottom: 1.5rem;
      padding: 0.75rem;
      background: #f8fafc;
      border-radius: 12px;
    }

    .card-header p {
      font-size: 0.875rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .card-header i {
      font-size: 1rem;
    }

    .card-footer {
      padding: 1rem 1.5rem;
      display: flex;
      justify-content: space-between;
      gap: 1rem;
    }

    .btn {
      flex: 1;
      padding: 0.75rem 1.5rem;
      border-radius: 12px;
      font-weight: 600;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      transition: all 0.3s ease;
    }

    .btn-view {
      background: linear-gradient(135deg, #4c6ef5, #364fc7);
      color: white;
    }

    .btn-view:hover {
      background: linear-gradient(135deg, #364fc7, #2b3eb1);
      transform: translateY(-2px);
    }



    .btn-apply:hover {
      background: linear-gradient(135deg, #26b37a, #1f925f);
      transform: translateY(-2px);
    }


</style>

<body>
    <div class="container">

        <div class="flex justify-between items-center mb-8">
            <a asp-action="Index" asp-controller="Bidtender" class="text-blue-600 hover:text-blue-800 transition-colors duration-300 text-2xl">
                <i class="fas fa-arrow-left mr-2"></i>
                <span class="text-lg">Back</span>
            </a>
            <h2 class="text-3xl font-bold bg-gradient-to-r from-blue-600 to-indigo-600 text-transparent bg-clip-text">
                Upcomming Auction
            </h2>
        </div>

        <div class="tender-grid">
            @foreach (var auction in Model)
            {
                <div class="tender-card">
                    <div class="card-content">
                        <h5 class="card-title">Auction #@auction.AuctionId - @auction.Title</h5>
                        <p class="card-text">@auction.AuctionDescription</p>
                        

                        <div class="card-header">
                            <p class="text-green-500"><i class="fas fa-calendar-check"></i> <strong>@auction.StartDate.ToString("MM/dd/yyyy")</strong></p>
                            <p class="text-red-500"><i class="fas fa-calendar-times"></i> <strong>@auction.EndDate.ToString("MM/dd/yyyy")</strong></p>
                        </div>
                    </div>

                    <div class="card-footer">
                        <a asp-action="BidderAuctionDetails" asp-controller="BidAuction" asp-route-id="@auction.EncId" class="btn btn-view">
                            View Details <i class="fas fa-eye"></i>
                        </a>

                    </div>
                </div>
            }
        </div>
    </div>


</body>
