<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BidNetra</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BidNetra.styles.css" asp-append-version="true" />
    @*Flowbite JS*@
    <script src="~/lib/flowbite/flowbite.js"></script>
    <script src="~/lib/flowbite/flowbite.min.js"></script>
    <script src="~/lib/flowbite/flowbite.phoenix.js"></script>
    <script src="~/lib/flowbite/flowbite.phoenix.min.js"></script>
    <script src="~/lib/flowbite/flowbite.turbo.js"></script>
    <script src="~/lib/flowbite/flowbite.turbo.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="~/lib/flowbite/flowbite.min.css" rel="stylesheet" />
    <link href="~/lib/flowbite/flowbite.css" rel="stylesheet" />
    @*Jquery cdn*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>

    @*Jquery validation*@
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.js"></script>

    @*Unobtrusive Ajax*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js" integrity="sha512-DedNBWPF0hLGUPNbCYfj8qjlEnNE92Fqn7xd3Sscfu7ipy7Zu33unHdugqRD3c4Vj7/yLv+slqZhMls/4Oc7Zg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    @*Jquery unobtrusive ajax validation*@
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet"> <!-- FontAwesome link -->

    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css">
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>

    @* Load SignalR from CDN *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.7/signalr.min.js" integrity="sha512-7SRCYIJtR6F8ocwW7UxW6wGKqbSyqREDbfCORCbGLatU0iugBLwyOXpzhkPyHIFdBO0K2VCu57fvP2Twgx1o2A==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

</head>


<body>

    @if (User.Identity.IsAuthenticated)
    {
        <header>


            <nav class="bg-white border-gray-200 dark:bg-gray-900">
                <div class="p-4 mx-auto flex max-w-screen-xl flex-wrap items-center justify-between">
                    <a href="https://flowbite.com/" class="space-x-3 flex items-center rtl:space-x-reverse">

                        <span class="self-center whitespace-nowrap text-2xl font-semibold dark:text-white">Logo</span>
                    </a>
                    @*here this anchor tag id is passed in button below and script at the end of the code*@
                    <a data-ajax="true" data-ajax-method="get" data-ajax-update="#profile-img" class="btn-profile-img" asp-action="ProfileImage" asp-controller="Home"></a>

                    <div class="space-x-3 flex items-center rtl:space-x-reverse md:order-2 md:space-x-0">
                        <button id="profile-img" type="button" class="bg-gray-800 flex rounded-full text-sm focus:ring-4 focus:ring-gray-300 md:me-0 dark:focus:ring-gray-600" id="user-menu-button" aria-expanded="false" data-dropdown-toggle="user-dropdown" data-dropdown-placement="bottom">
                            <span class="sr-only">Open user menu</span>

                        </button>

                        <div class="my-4 bg-white divide-gray-100 z-50 hidden list-none divide-y rounded-lg text-base shadow dark:bg-gray-700 dark:divide-gray-600" id="user-dropdown">
                            <div class="px-4 py-3">
                                <span class="text-gray-900 block text-sm dark:text-white">@User.FindFirst("FullName")?.Value</span>
                                <span class="text-gray-500 block truncate text-sm dark:text-gray-400">@User.FindFirst("email")?.Value</span>
                            </div>
                            <ul class="py-2" aria-labelledby="user-menu-button">
                                <li>
                                    <a asp-action="ProfilePage" asp-controller="Home" class="px-4 py-2 text-gray-700 block text-sm hover:bg-gray-100 dark:text-gray-200 dark:hover:bg-gray-600 dark:hover:text-white">Profile</a>
                                </li>
                                <li>
                                    <a asp-action="ChangePassword" asp-controller="Account" class="px-4 py-2 text-gray-700 block text-sm hover:bg-gray-100 dark:text-gray-200 dark:hover:bg-gray-600 dark:hover:text-white">Change Password</a>
                                </li>
                                <li>
                                    <a href="#" class="px-4 py-2 text-gray-700 block text-sm hover:bg-gray-100 dark:text-gray-200 dark:hover:bg-gray-600 dark:hover:text-white">Earnings</a>
                                </li>
                                <li>
                                    <a asp-action="Logout" asp-controller="Account" class="px-4 py-2 text-gray-700 block text-sm hover:bg-gray-100 dark:text-gray-200 dark:hover:bg-gray-600 dark:hover:text-white">Sign out</a>
                                </li>
                            </ul>
                        </div>
                        <button data-collapse-toggle="navbar-user" type="button" class="p-2 w-10 h-10 text-gray-500 inline-flex items-center justify-center rounded-lg text-sm hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 md:hidden dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="navbar-user" aria-expanded="false">
                            <span class="sr-only">Open main menu</span>
                            <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15" />
                            </svg>
                        </button>
                    </div>
                    <div class="hidden w-full items-center justify-between md:flex md:w-auto md:order-1" id="navbar-user">
                        <ul class="p-4 mt-4 border-gray-100 bg-gray-50 flex flex-col rounded-lg border font-medium rtl:space-x-reverse dark:bg-gray-800 dark:border-gray-700 md:p-0 md:space-x-8 md:flex-row md:mt-0 md:border-0 md:bg-white md:dark:bg-gray-900">
                            @if (User.IsInRole("Admin"))
                            {
                                <li>
                                    <a href="#" class="py-2 px-3 text-white bg-blue-700 block rounded md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-blue-500" aria-current="page">Home</a>
                                </li>
                                <li>
                                    <a asp-action="TenderList" asp-controller="Admin" class="py-2 px-3 text-gray-900 block rounded hover:bg-gray-100 dark:text-white dark:border-gray-700 md:p-0 dark:hover:bg-gray-700 dark:hover:text-white md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:text-blue-500 md:dark:hover:bg-transparent">Tender</a>
                                </li>
                                <li>
                                    <a asp-action="AuctionList" asp-controller="Admin" class="py-2 px-3 text-gray-900 block rounded hover:bg-gray-100 dark:text-white dark:border-gray-700 md:p-0 dark:hover:bg-gray-700 dark:hover:text-white md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:text-blue-500 md:dark:hover:bg-transparent">Auction</a>
                                </li>
                                <li>
                                    <a asp-action="AddBlog" asp-controller="Blog" class="py-2 px-3 text-gray-900 block rounded hover:bg-gray-100 dark:text-white dark:border-gray-700 md:p-0 dark:hover:bg-gray-700 dark:hover:text-white md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:text-blue-500 md:dark:hover:bg-transparent">Blog</a>
                                </li>

                            }
                            else if (User.IsInRole("Publisher"))
                            {
                                <li>
                                    <a asp-action="Index" asp-controller="Publisher" class="py-2 px-3 text-white bg-blue-700 block rounded md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-blue-500" aria-current="page">Home</a>
                                </li>
                                <li>
                                    <a asp-action="TenderPage" asp-controller="PublisherTender" asp-route-activeTab="TenderList" class="py-2 px-3 text-gray-900 block rounded hover:bg-gray-100 dark:text-white dark:border-gray-700 md:p-0 dark:hover:bg-gray-700 dark:hover:text-white md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:text-blue-500 md:dark:hover:bg-transparent">Tender</a>
                                </li>
                                <li>
                                    <a asp-action="AuctionPage" asp-controller="PublisherAuction" asp-route-activeTab="AuctionList" class="py-2 px-3 text-gray-900 block rounded hover:bg-gray-100 dark:text-white dark:border-gray-700 md:p-0 dark:hover:bg-gray-700 dark:hover:text-white md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:text-blue-500 md:dark:hover:bg-transparent">Auction</a>
                                </li>
                                <li>
                                    <a asp-action="AddBlog" asp-controller="Blog" class="py-2 px-3 text-gray-900 block rounded hover:bg-gray-100 dark:text-white dark:border-gray-700 md:p-0 dark:hover:bg-gray-700 dark:hover:text-white md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:text-blue-500 md:dark:hover:bg-transparent">Blog</a>
                                </li>

                            }
                            else
                            {
                                <li>
                                    <a href="#" class="py-2 px-3 text-white bg-blue-700 block rounded md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-blue-500" aria-current="page">Home</a>
                                </li>
                                <li>
                                    <a asp-action="Index" asp-controller="Home" class="py-2 px-3 text-gray-900 block rounded hover:bg-gray-100 dark:text-white dark:border-gray-700 md:p-0 dark:hover:bg-gray-700 dark:hover:text-white md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:text-blue-500 md:dark:hover:bg-transparent">Tender</a>
                                </li>
                                <li>
                                    <a asp-action="Create" asp-controller="Home" class="py-2 px-3 text-gray-900 block rounded hover:bg-gray-100 dark:text-white dark:border-gray-700 md:p-0 dark:hover:bg-gray-700 dark:hover:text-white md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:text-blue-500 md:dark:hover:bg-transparent">Auction</a>
                                </li>
                                <li>
                                    <a asp-action="AddBlog" asp-controller="Blog" class="py-2 px-3 text-gray-900 block rounded hover:bg-gray-100 dark:text-white dark:border-gray-700 md:p-0 dark:hover:bg-gray-700 dark:hover:text-white md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:text-blue-500 md:dark:hover:bg-transparent">Blog</a>
                                </li>
                            }


                        </ul>
                    </div>
                </div>
            </nav>

        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }

    @*  <footer class="border-top footer text-muted">
    <div class="container">
    &copy; 2024 - AIproject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.btn-profile-img')[0].click();
        });
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>


</html>
