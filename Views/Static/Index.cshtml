@{

    Layout = "_StaticLayout";
    ViewData["Title"] = "Home Page";
}


<style>
    body {
        overflow-x: hidden;
    }
    /* Custom styles for the header section */
    .header {
        padding-top: 120px;
        padding-bottom: 10px;
        height: 535px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: relative;
        color: white;
    }

    /* Background styling */
    .homebg {
        width: 100%;
        height: 700px;
        position: absolute;
        z-index: -1;
        top: 0;
        left: 0;
    }

    /* Title styling */
    .header .title h1 {
        text-wrap: nowrap;
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .header .title p {
        font-size: 1.25rem;
        margin-bottom: 1.5rem;
    }

    .image-container {
        position: relative;
        left: 160px;
        width: 384px;
        height: auto;
        margin-bottom: 250px;
        animation: float 6s ease-in-out infinite;
    }

    /* Base image (Blood Drop) */
    .bldrop {
        position: relative;
        /* left: 10px; */
        width: 100%; /* Makes the image take full container width */
        height: auto;
        object-fit: contain; /* Adjust the image's aspect ratio */
    }

    /* Overlay image (Hand) with a gap */
    .hand-img {
        position: absolute;
        top: 50px; /* Adjust this to add the gap */
        /* left: 140px; */
        width: 100%; /* Makes the hand image take full width */
        height: auto;
        object-fit: contain; /* Adjusts the image to fit */
        opacity: 0.8; /* Optional: Adjust transparency to see both images clearly */
    }

    /* Button styling */
    .header .serviceBtn {
        margin-top: 1.5rem;
    }

        .header .serviceBtn button {
            padding: 0.75rem 2rem;
            cursor: pointer;
            font-size: 1.25rem;
            font-weight: bold;
            text-align: center;
            color: #ea0000;
            border: 1px solid #ed0000;
            border-radius: 0.375rem;
            background-color: transparent;
            transition: background-color 0.3s ease;
        }

            .header .serviceBtn button:nth-of-type(1) {
                background-color: #00ea23a0;
                color: whitesmoke;
                border: none;
            }

                .header .serviceBtn button:nth-of-type(1):hover {
                    background-color: #e06a6a34;
                }

            .header .serviceBtn button:hover:not(:nth-of-type(1)) {
                background-color: #f4d6d6;
            }

</style>
<body>

    <div class="mx-auto w-full max-w-7xl">
        <!-- Header Background -->
        <svg id="header_bg" class="homebg w-full h-72 absolute top-0 left-0 z-[-1]" viewBox="0 10 500 50" preserveAspectRatio="none">
            <defs>
                <radialGradient id="Gradient" cx="0.5" cy="0.5" r="0.5" fx="0.75" fy="0.25">
                    <stop offset="0%" stop-color="#07365d" />
                    <stop offset="100%" stop-color="#000717" />
                </radialGradient>
            </defs>
            <path d="M0,0 L500,0 L500,55 L0,55 Z" fill="url(#Gradient)" />

        </svg>

        <!-- Header Section -->
        <div id="header" class="header flex justify-between items-center relative py-40 px-6 text-white">
            <!-- Title and Text Section -->
            <div class="title">
                <h1>BidNetra: Empowering Transparent Bidding</br> Ecosystem</h1>
                <p>
                    From Tenders to Auctions – One Platform, Endless Opportunities
                </p>

                <!-- Button Section -->
                <section class="serviceBtn mt-6">
                    <a href="donateblood">
                        <button class="service-btn btn btn-danger font-semibold py-2 px-6 text-lg w-full md:w-auto mb-4">
                            Explore More &nbsp; &#10095;
                        </button>
                    </a>
                </section>
            </div>

            <!-- Image Section -->
            <div class="flex flex-col items-center">
                <!-- Image Container for Merged Images -->
                <div class="image-container">
                    <!-- Blood Drop Image -->
                    <img class="bldrop" src="~/Images/HomeLogo.png" alt="Blood Drop Image" />
                    <!-- Hand Image (overlayed) with small gap -->
                    <img class="hand-img" src="~/Images/hand.png" alt="Hand Image" />
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("~/Views/Static/_KeyServices.cshtml")
    @Html.Partial("~/Views/Static/_Work.cshtml")
    @Html.Partial("~/Views/Static/_Industry.cshtml")
    @Html.Partial("~/Views/Static/_Testimonial.cshtml")


</body>