@model TenderApplicationEdit
@{
    ViewData["Title"] = "Apply Tenders";
    Layout = "";
}

<!-- Flowbite CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.css">

<!-- Flowbite JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"></script>

<!-- FontAwesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<div class="p-8 max-w-3xl mx-auto">
    <div class="bg-white rounded-lg shadow p-6 mb-6">
        <h1 class="text-2xl font-bold text-gray-900 mb-2">
            <i class="fas fa-file-signature mr-2"></i>Tender Proposal
        </h1>
        <p class="text-gray-500">Complete the form below to submit your proposal</p>
    </div>

    <form asp-action="AppliedTender" asp-controller="BidTender" enctype="multipart/form-data" method="Post">
        <div asp-validation-summary="ModelOnly" class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50"></div>

        <input asp-for="CompanyApplyId" type="hidden" value="@Model.CompanyApplyId" />
        <input asp-for="TenderAppllyId" type="hidden" value="@Model.TenderAppllyId" />

        <div class="bg-white rounded-lg shadow p-6 mb-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">
                <i class="fas fa-file-contract mr-2"></i>Proposal Details
            </h2>

            <div class="grid gap-6 mb-6 md:grid-cols-2">
                <div>
                    <label asp-for="ProposedDuration" class="block mb-2 text-sm font-medium text-gray-900">
                        Proposed Duration <span class="text-red-500">*</span>
                    </label>
                    <input asp-for="ProposedDuration" type="text"
                           class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                           placeholder="e.g., 3 months" required>
                    <span asp-validation-for="ProposedDuration" class="text-sm text-red-600"></span>
                </div>

                <div>
                    <label asp-for="ProposedBudget" class="block mb-2 text-sm font-medium text-gray-900">
                        Proposal Amount (USD) <span class="text-red-500">*</span>
                    </label>
                    <input asp-for="ProposedBudget" type="number"
                           class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
                           placeholder="e.g., 5000" required>
                    <span asp-validation-for="ProposedBudget" class="text-sm text-red-600"></span>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow p-6 mb-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">
                <i class="fas fa-upload mr-2"></i>Required Documents
            </h2>

            <div>
                <label asp-for="TenderFile" class="block mb-2 text-sm font-medium text-gray-900">
                    Upload PDF Document <span class="text-red-500">*</span>
                </label>
                <input asp-for="TenderFile"
                       class="block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 focus:outline-none"
                       type="file"
                       accept=".pdf"
                       required>
                <span asp-validation-for="TenderFile" class="text-sm text-red-600"></span>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center mb-4">
                <input id="terms" type="checkbox" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500" required>
                <label for="terms" class="ml-2 text-sm font-medium text-gray-900">
                    I agree to the <a href="#" class="text-blue-600 hover:underline">terms and conditions</a>
                    <span class="text-red-500">*</span>
                </label>
            </div>

            <button type="submit" class="w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-3">
                <i class="fas fa-paper-plane mr-2"></i>Submit Proposal
            </button>
        </div>
    </form>
</div>