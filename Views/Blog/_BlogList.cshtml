@model IEnumerable<FYPBidNetra.Models.BlogContentEdit>


<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<style>
    .blog-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .blog-card {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        margin-bottom: 2rem;
        background-color: #fff;
        border: none;
    }

        .blog-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.12);
        }

    .blog-header {
        padding: 1rem 1.5rem;
        border-bottom: 1px solid #f0f0f0;
        display: flex;
        align-items: center;
    }

    .user-photo {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #fff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .user-info {
        margin-left: 1rem;
    }

    .user-name {
        font-weight: 600;
        color: #333;
        margin-bottom: 0.2rem;
        font-size: 1rem;
    }

    .post-date {
        color: #6c757d;
        font-size: 0.85rem;
    }

    .blog-content {
        padding: 1.5rem;
    }

    .blog-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 1rem;
    }

    .blog-description {
        color: #4a5568;
        line-height: 1.6;
        overflow: hidden;
        position: relative;
        max-height: 100px;
        transition: max-height 0.3s ease;
    }

        .blog-description.expanded {
            max-height: 2000px;
        }

        .blog-description.collapsed::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 70px;
            background: linear-gradient(to bottom, rgba(255, 255, 255, 0), rgba(255, 255, 255, 1));
            pointer-events: none;
        }

    .read-more-btn {
        display: inline-block;
        color: #3b82f6;
        font-weight: 600;
        margin-top: 0.75rem;
        cursor: pointer;
        transition: color 0.2s ease;
    }

        .read-more-btn:hover {
            color: #2563eb;
            text-decoration: underline;
        }

    .blog-image-container {
        width: 100%;
        max-height: 400px;
        overflow: hidden;
    }

    .blog-image {
        width: 100%;
        height: auto;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

        .blog-image:hover {
            transform: scale(1.02);
        }

    /* Add these styles to your existing <style> section */
    .image-modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.9);
        cursor: pointer;
    }

    .image-modal-content {
        position: relative;
        margin: auto;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
        width: 100%;
        padding: 20px;
        box-sizing: border-box;
    }

    .image-modal-img {
        max-width: 90%;
        max-height: 90%;
        object-fit: contain;
        box-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
        border-radius: 4px;
    }

    .image-modal-close {
        position: absolute;
        top: 20px;
        right: 30px;
        color: #f1f1f1;
        font-size: 40px;
        font-weight: bold;
        cursor: pointer;
        z-index: 1001;
        transition: 0.3s;
    }

        .image-modal-close:hover {
            color: #3b82f6;
            transform: scale(1.1);
        }

    /* Add a cursor pointer to blog images to indicate they're clickable */
    .blog-image {
        cursor: pointer;
    }
</style>

<div class="blog-container">
   

    @foreach (var blog in Model)
    {
        <div class="blog-card">
            <div class="blog-header">
                @if (!string.IsNullOrEmpty(blog.UserPhoto))
                {
                    <img src="~/UserImage/@blog.UserPhoto" alt="@blog.FirstName's photo" class="user-photo" />
                }
                else
                {
                    <div class="user-photo d-flex align-items-center justify-content-center bg-light">
                        <i class="fas fa-user text-secondary"></i>
                    </div>
                }
                <div class="user-info">
                    <h6 class="user-name">
                        @blog.FirstName
                        @(!string.IsNullOrEmpty(blog.MiddleName) ? blog.MiddleName + " " : "")
                        @blog.LastName
                    </h6>
                    <span class="post-date">
                        <i class="far fa-calendar-alt me-1"></i>
                        @blog.Postdate.ToString("MMMM dd, yyyy")
                    </span>
                </div>
            </div>

            <div class="blog-content">
                <h2 class="blog-title">@blog.SectionHeading</h2>
                <div class="blog-description collapsed">
                    @Html.Raw(blog.SectionDescription)
                </div>
                <div class="read-more-btn">
                    Read More <i class="fas fa-chevron-down ms-1"></i>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(blog.SectionImage))
            {
                <div class="blog-image-container">
                    <img src="~/BlogImage/@blog.SectionImage" class="blog-image" alt="Blog Image" />
                </div>
            }
        </div>
    }



    <script>
        $(document).ready(function () {
            $('.read-more-btn').each(function () {
                var button = $(this);
                var description = button.prev('.blog-description');

                // Check if description needs a "Read More" button
                if (description.prop('scrollHeight') <= 100) {
                    button.hide();
                    description.removeClass('collapsed');
                }

                // Add click event
                button.on('click', function () {
                    var isCollapsed = description.hasClass('collapsed');

                    if (isCollapsed) {
                        description.removeClass('collapsed').addClass('expanded');
                        button.html('Show Less <i class="fas fa-chevron-up ms-1"></i>');
                    } else {
                        description.removeClass('expanded').addClass('collapsed');
                        button.html('Read More <i class="fas fa-chevron-down ms-1"></i>');

                        // Smooth scroll
                        $('html, body').animate({
                            scrollTop: button.closest('.blog-card').offset().top - 20
                        }, 300);
                    }
                });

            });
            // New image viewer functionality
            $('.blog-image').on('click', function () {
                var imageUrl = $(this).attr('src');

                // Create modal for full-size image view
                var imageModal = $('<div id="imageModal" class="image-modal">' +
                    '<div class="image-modal-content">' +
                    '<span class="image-modal-close">&times;</span>' +
                    '<img src="' + imageUrl + '" class="image-modal-img">' +
                    '</div></div>');

                // Add modal to body
                $('body').append(imageModal);

                // Show the modal
                $('#imageModal').fadeIn(300);

                // Close modal when clicking X or outside the image
                $('.image-modal-close, .image-modal').on('click', function (e) {
                    if (e.target === this || $(e.target).hasClass('image-modal-close')) {
                        $('#imageModal').fadeOut(300, function () {
                            $(this).remove();
                        });
                    }
                });
            });
        });
       
    </script>
</div>